{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SIMULATION => RUN",
      "type": "shell",
      "command": "rm ./simulation/ejs",
      "dependsOn": "[REMOVE] SIMULATION TEST",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": false
      }
    },
    {
      "label": "[REMOVE] SIMULATION TEST",
      "type": "shell",
      "command": "rm ./simulation/test/test",
      "dependsOn": "[RUN TEST] SIMULATION",
      "problemMatcher": [],
      "presentation": {
        "echo": false
      },
    },
    {
      "label": "[RUN TEST] SIMULATION",
      "dependsOn": "[TEST] SIMULATION",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation/test"
      },
      "presentation": {
        "echo": true,
      },
      "command": "./test",
      "problemMatcher": []
    },
    {
      "label": "[TEST] SIMULATION",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation"
      },
      "command":
        "gcc -g input_parameters.c internal_force.c external_force.c test/test.c -o test/test -lrt -lm",
      "dependsOn": "[EXECUTE] SIMULATION",
      "problemMatcher": [],
      "presentation": {
        "echo": false
      }
    },
    {
      "label": "[EXECUTE] SIMULATION",
