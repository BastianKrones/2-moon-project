{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "SIMULATION",
      "dependsOn": ["SIMULATION [RUN]","SIMULATION [TEST]"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "SIMULATION [RUN]",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false
      },
      "command": "./ejs",
      "problemMatcher": [],
      "dependsOn": "SIMULATION [COMPILE]"
    },
    {
      "label": "SIMULATION [COMPILE]",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation"
      },
      "command": "gcc -g input_parameters.c internal_force.c external_force.c initialize.c cmd_args.c next_copy.c ejs.c -o ejs -lm",
      "dependsOn": "CLEAR",
      "problemMatcher": [],
      "presentation": {
        "echo": false
      }
    },
    {
      "label": "CLEAR",
      "type": "shell",
      "command": "clear",
      "problemMatcher": []
    },
    {
      "label": "SIMULATION [TEST]",
      "dependsOn": "SIMULATION [TEST1]",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation/test"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true
      },
      "command": "./test",
      "problemMatcher": []
    },
    {
      "label": "SIMULATION [TEST1]",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation"
      },
      "command": "gcc -g input_parameters.c internal_force.c external_force.c acceleration.c next_copy.c test/test.c -o test/test -lrt -lm",
      "dependsOn": "CLEAR",
      "problemMatcher": [],
      "presentation": {
        "echo": false
      }
    },
    {
      "label": "[COMPILE] EX1",
      "type": "shell",
      "command": "gcc -g ./exercise_1/Intr_ex_1.c -o ./exercise_1/Intr_ex_1",
      "problemMatcher": []
    },
    {
      "label": "EX2 => PLOT",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/exercise_2"
      },
      "command": "gnuplot ./ex2_plot.gnu",
      "dependsOn": "[REMOVE] EX2",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "EX2 => RUN",
      "type": "shell",
      "command": "rm ./exercise_2/Intr_ex_2",
      "dependsOn": "[EXECUTE] EX2",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "[EXECUTE] EX2",
      "type": "shell",
      "command": "./exercise_2/Intr_ex_2",
      "dependsOn": "[COMPILE] EX2",
      "problemMatcher": []
    },
    {
      "label": "[COMPILE] EX2",
      "type": "shell",
      "command": "gcc -g ./exercise_2/Intr_ex_2.c -o ./exercise_2/Intr_ex_2 -lm",
      "problemMatcher": []
    }
  ]
}
