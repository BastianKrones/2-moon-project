      "problemMatcher": [],
      "presentation": {
        "echo": false
      }
    },
    {
      "label": "[COMPILE] SIMULATION",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/simulation"
      },
      "command": "gcc -g input_parameters.c internal_force.c external_force.c initialize.c cmd_args.c ejs.c -o ejs -lm",
      "problemMatcher": [],
      "dependsOn": "CLEAN",
      "presentation": {
        "echo": false
      }
    },
